<h2>Profile Page</h2>

<h3>Welcome <%= user.firstName %></h3>
<% if (!user.profilePic) { %>
    <img src="https://i.imgur.com/CMqTyEZt.jpg" alt="default-profilePic">
<% } else { %> 
    <img src="<%= user.profilePic %>" alt="profilePic">
<% } %>

<hr>

<h4>My Favorite Places</h4>

<div class="container">
    <div class="row">
        <% user.destinations.forEach(function(destination) { %>
            <div class="col-6 col-md-3">
                <div class="card">
                    <img class="card-img-top" src="<%= destination.image %>" alt="<%= destination.city %>">
                    <div class="card-body">
                        <h3 class="card-title"><%= destination.city %>, <%= destination.stateOrCountry %></h3>
                        <div class="row">
                            <a class="btn btn-primary" href="/destinations/<%= destination.id %>">More Details</a>
                            <form action="/destinations/<%= destination.id %>/fave/?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-primary" value="Remove">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>