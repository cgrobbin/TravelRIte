<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newReview">Add Review</button>

<div class="modal fade" id="newReview" tabindex="-1" aria-labelledby="newReviewLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newReviewLabel">Add Review</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/destinations/<%= destination.id %>/addreview" method="POST">
                <label class="form-label" for="destination">Destination:</label>
                <input type="text" readonly class="form-control" id="destinationId" value="<%= destination.city %>, <%= destination.stateOrCountry %>">
            
                <label class="form-label" for="user">By:</label>
                <input type="text" readonly class="form-control" id="userId" value="<%= currentUser.firstName %> <%= currentUser.lastName %>">
            
                <label class="form-label" for="content">Review:</label>
                <textarea class="form-control" name="content" id="content" cols="30" rows="3"></textarea>
            
                <label class="form-label" for="rating">Rating:</label>
                <input class="form-control" id="rating" type="number" name="rating" min="1" max="5" value="1">
            
                <input class="btn btn-primary" type="submit" value="Add Review">
            </form>
        </div>
        <div class="modal-footer">
          <a href="#" data-bs-dismiss="modal"></a>
        </div>
      </div>
    </div>
  </div>