<h2>Gallery</h2>

<br>

<% if (currentUser) { %>
    <h3>Upload Your Own Photos to Our Gallery</h3>
    <form action="/gallery" method="POST" enctype="multipart/form-data">
        <input type="file" name="file">

        <label for="cityList" class="form-label">Cities:</label>
        <input class="form-control" list="cityListOptions" id="cityList">
        <datalist id="cityListOptions">
            <% destinations.forEach(function(destination) { %>
                <!-- Need to access id from dropdown -->
                <option name="city" value="<%= destination.city %>"></option>
            <% }) %>
        </datalist>

        <input type="submit" class="btn btn-primary" value="Upload">
    </form>
<% } %>

<% if (images[0] !== undefined) { %>
    <div class="container">
        <div class="row">
            <% images.forEach(function(image) { %>
                <div class="col-sm-4">
                    <img src="<%= image.url %>" alt="<%= image.destination.city %>">
                </div>
            <% }) %>
        </div>
    </div>
<% } else { %>
    <h4>No Images Available</h4>
<% } %>

